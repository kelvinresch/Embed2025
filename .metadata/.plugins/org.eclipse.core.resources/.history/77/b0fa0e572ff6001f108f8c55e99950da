#include <MKL46Z4.h>
#include "ECE3140Lab2.h"
#include "led.h"

volatile bool green_state = false;

void main(void){
	/*
	 * Initialize the microcontroller and LEDs
	 */
	set15MHz();
	led_init();
	/*
	 * Enable the clock to go to the PIT by setting the
	 * 23rd bit of SIM_SCGC6 high
	 */
	SIM->SCGC6 |= SIM_SCGC6_PIT_MASK;

	/*
	 * Enable the PIT module by setting the 2nd bit of the PIT's
	 * MCR register low
	 */
	PIT->MCR &= !PIT_MCR_MDIS_MASK;

	/*
	 * Set load value of PIT to 15,000,000.
	 */
	PIT->CHANNEL[0].LDVAL = 0xE4E1C0;

	/*
	 * Enable the interrupt and timer on the PIT module
	 */
	PIT->CHANNEL[0].TCTRL |= PIT_TCTRL_TIE_MASK | PIT_TCTRL_TEN_MASK;

	NVIC_EnableIRQ(22);

	while(1) {
		red_toggle();
		delay(1000);
	}
}

void PIT_IRQHandler(void) {
    // Clear the interrupt flag
    PIT->CHANNEL[0].TFLG = 1;

    green_toggle();
    // If the green LED is on, then set the PIT to 100 ms
    // If the green LED is off, set the PIT to 900 ms.
    if (green_state) {
    	green_toggle();
    	green_state = false;
    	PIT->CHANNEL[0].LDVAL = 0x16E360;
    } else {
    	green_toggle();
    	green_state = true;
    	PIT->CHANNEL[0].LDVAL = 0xCDFE60;
    }
}







